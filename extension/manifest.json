{
  "manifest_version": 3,
  "name": "OSINT Monitor",
  "version": "1.0.0",
  "description": "AI-powered social media analysis for sentiment, narratives, misinformation, and propaganda detection",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.instagram.com/*",
    "https://www.youtube.com/*",
    "https://www.facebook.com/*",
    "https://www.reddit.com/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.instagram.com/*",
        "https://www.youtube.com/*",
        "https://www.facebook.com/*",
        "https://www.reddit.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
