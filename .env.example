# Environment Configuration
# Copy to .env and update values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite:///./osint_logs.db
# For production with PostgreSQL:
# DATABASE_URL=postgresql://osint:osint_password@localhost:5432/osint_db

# =============================================================================
# REDIS CACHE (Optional)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# GPU / CUDA SETTINGS
# =============================================================================
USE_GPU=true
CUDA_VISIBLE_DEVICES=0
# For multiple GPUs: CUDA_VISIBLE_DEVICES=0,1

# =============================================================================
# MODEL SETTINGS
# =============================================================================
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Custom fine-tuned models (after training)
# MISINFO_MODEL=./models/misinfo_classifier
# FRAMING_MODEL=./models/framing_classifier_frames

# =============================================================================
# THRESHOLDS
# =============================================================================
MISINFO_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.5

# =============================================================================
# ETHICAL SETTINGS
# =============================================================================
ANONYMIZE_TEXT=true
LOG_ANALYSIS=true

# =============================================================================
# API KEYS (Optional - for enhanced baseline comparison)
# =============================================================================
# GDELT_API_KEY=your_key_here

# =============================================================================
# DEBUG
# =============================================================================
DEBUG=false
